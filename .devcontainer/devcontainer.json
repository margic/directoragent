{
  "name": "sim-racecenter-agent",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.12"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.mypy-type-checker",
        "ms-python.black-formatter",
        "charliermarsh.ruff",
        "ms-azuretools.vscode-docker",
        "GitHub.copilot",
        "bierner.markdown-mermaid"
      ],
      "settings": {
        "python.testing.pytestEnabled": true,
        "python.analysis.typeCheckingMode": "basic",
        "editor.formatOnSave": true,
        "python.formatting.provider": "none",
        // Enable MCP for Copilot Chat and register stdio server
        "github.copilot.chat.modelContextProtocol.enabled": true,
        "github.copilot.chat.modelContextProtocol.serverConfigurations": {
          "racecenter": {
            "command": "python",
            "args": [
              "-m",
              "sim_racecenter_agent.mcp.sdk_server"
            ],
            "cwd": "/workspaces/directoragent",
            "env": {
              "ENABLE_NATS": "1",
              "ENABLE_LAP_TIMING": "1",
              "ENABLE_EXTENDED_STANDINGS": "1",
              "ENABLE_SESSION_STATE": "1",
              "NATS_URL": "${containerEnv:NATS_URL}",
              "NATS_USERNAME": "${containerEnv:NATS_USERNAME}",
              "NATS_PASSWORD": "${containerEnv:NATS_PASSWORD}"
            }
          }
        }
      }
    }
  },
  "containerEnv": {
    "LOG_LEVEL": "INFO",
    "PYTHONUNBUFFERED": "1",
    "SQLITE_PATH": "/workspaces/directoragent/data/agent.db",
    // Use the Docker network DNS name 'nats' for the NATS container
    "NATS_URL": "nats://192.168.4.63:4222",
    // Credentials (override via user secrets if needed)
    "NATS_USERNAME": "user",
    "NATS_PASSWORD": "pass",
    "NATS_CONNECT_TIMEOUT": "1",
    // Enable NATS ingestion & extended subjects by default
    "ENABLE_NATS": "1",
    "ENABLE_LAP_TIMING": "1",
    "ENABLE_EXTENDED_STANDINGS": "1",
    "ENABLE_SESSION_STATE": "1",
    "ENABLE_INCIDENT_EVENTS": "1",
    "ENABLE_PIT_EVENTS": "1",
    "ENABLE_STINT": "1",
    "ENABLE_TRACK_CONDITIONS": "1",
    "ENABLE_JETSTREAM_CATCHUP": "1",
    "DISABLE_INGEST": "0",
    "DEFER_INGEST_INIT": "0"
  },
  "mounts": [
    "source=sr_agent_data,target=/workspace/data,type=volume"
  ],
  "postCreateCommand": "bash -c 'pip install --no-cache-dir -e .[dev] && pre-commit install'",
  "remoteUser": "vscode",
  "runArgs": [
    "--network=nats"
  ]
}