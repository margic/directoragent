{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://pyracing.dev/schemas/iracing.session_state.schema.json",
  "title": "Session State Snapshot",
  "type": "object",
  "required": ["timestamp"],
  "properties": {
    "timestamp": {"type": "number"},
    "session_type": {"type": ["string", "null"]},
    "time_remaining_s": {"type": ["number", "null"]},
    "flag_bits": {"type": ["integer", "null"]},
    "caution": {"type": ["boolean", "null"]},
    "green": {"type": ["boolean", "null"]},
    "pits_open": {"type": ["boolean", "null"]},
    "pace_mode": {"type": ["string", "null"]}
  },
  "additionalProperties": false
}
