{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://pyracing.dev/schemas/iracing.pit.schema.json",
  "title": "Pit Event",
  "type": "object",
  "required": ["timestamp", "event", "car_idx"],
  "properties": {
    "timestamp": {"type": "number"},
    "event": {"type": "string", "enum": ["enter", "exit"]},
    "car_idx": {"type": ["integer", "null"]},
    "lap": {"type": ["integer", "null"]},
    "stop_duration_s": {"type": ["number", "null"]},
    "fuel_added_l": {"type": ["number", "null"]},
    "fast_repair_used": {"type": ["boolean", "null"]}
  },
  "additionalProperties": false
}
