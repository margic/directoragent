{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://pyracing.dev/schemas/iracing.telemetry.schema.json",
  "title": "iRacing Telemetry Snapshot",
  "type": "object",
  "description": "Real-time telemetry snapshot; dynamic keys allowed.",
  "required": ["CarIdx", "display_name"],
  "properties": {
    "CarIdx": {"type": "integer"},
    "PlayerName": {"type": "string"},
    "CarNumber": {"type": "string"},
    "CarNumberAhead": {"type": ["string", "null"]},
    "DriverAhead": {"type": ["string", "null"]},
    "CarNumberBehind": {"type": ["string", "null"]},
    "DriverBehind": {"type": ["string", "null"]},
    "driver_id": {"type": "string"},
    "display_name": {"type": "string"}
  },
  "additionalProperties": true
}
