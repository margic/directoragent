{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://pyracing.dev/schemas/iracing.session.schema.json",
  "title": "iRacing Session Roster",
  "type": "object",
  "required": ["drivers"],
  "properties": {
    "drivers": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["CarIdx", "UserName"],
        "properties": {
          "CarIdx": {"type": "integer"},
            "UserName": {"type": "string"},
            "CarNumber": {"type": ["string", "null"]}
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": false
}
