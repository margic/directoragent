{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://pyracing.dev/schemas/iracing.standings.schema.json",
  "title": "Standings Snapshot",
  "type": "object",
  "required": ["timestamp", "leader_car_idx", "cars"],
  "properties": {
    "timestamp": {"type": "number"},
    "leader_car_idx": {"type": "integer"},
    "cars": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["car_idx", "pos"],
        "properties": {
          "car_idx": {"type": "integer"},
          "pos": {"type": "integer"},
          "class_pos": {"type": ["integer", "null"]},
          "lap": {"type": ["integer", "null"]},
          "gap_leader_s": {"type": ["number", "null"]},
          "gap_ahead_s": {"type": ["number", "null"]},
          "last_lap_s": {"type": ["number", "null"]}
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
