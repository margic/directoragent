{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://pyracing.dev/schemas/iracing.lap_timing.schema.json",
  "title": "Lap Timing Snapshot",
  "type": "object",
  "required": ["timestamp", "cars"],
  "properties": {
    "timestamp": {"type": "number"},
    "cars": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["car_idx", "lap"],
        "properties": {
          "car_idx": {"type": "integer"},
          "lap": {"type": ["integer", "null"]},
          "last_lap_s": {"type": ["number", "null"]},
          "best_lap_s": {"type": ["number", "null"]},
          "current_lap_time_s": {"type": ["number", "null"]},
          "delta_best_s": {"type": ["number", "null"]}
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
